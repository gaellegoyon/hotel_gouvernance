				<script>
					document.addEventListener('DOMContentLoaded', function () {
    var enregistrerButton = document.getElementById('enregistrer-button');
    var inputElement = document.querySelector('.input-chambre');
    var addButtons = document.querySelectorAll('.btn-primary.add-button');

    
    function createReservation(chambreId, nomClient, telClient, emailClient) {
       
        fetch('/create-reservation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams({
                chambreId: chambreId,
                nom_client: nomClient,
                tel_client: telClient,
                email_client: emailClient,
            }),
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.text();
        })
        .then(data => {
            // La requête a réussi, vous pouvez effectuer des actions supplémentaires si nécessaire
            console.log('Réservation créée avec succès!');
        })
        .catch(error => {
            console.error('There was a problem with the fetch operation:', error);
        });
    }

    addButtons.forEach(function (addButton) {
        addButton.addEventListener('click', function () {
            // Récupérez la valeur de l'input
            var inputValue = inputElement ? inputElement.value : null;

            var spanElement = document.getElementById('chambre-id-in-panier');
            if (spanElement) {
                spanElement.innerHTML = inputValue;
            }
        });
    });

    if (enregistrerButton) {
        enregistrerButton.addEventListener('click', function () {
